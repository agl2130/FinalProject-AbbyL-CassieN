<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Load.AddClothes">

    <ImageView
        android:layout_marginBottom="10dp"
        android:id="@+id/loadedImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/loadedClothesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadedImage"
        android:layout_marginTop="20dp"
        android:text="Name: " />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/loadedClothesNameText"
        android:layout_toRightOf="@+id/loadedClothesName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadedImage"

        />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/loadedClothesInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info: "
        android:layout_below="@+id/loadedClothesName"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:layout_below="@+id/loadedClothesInfo"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:id="@+id/addtofave"
        android:text="Add to Favorite"
        android:onClick="addtoFavorite" />

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:layout_below="@+id/addtofave"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:onClick="delete" />

</RelativeLayout>
